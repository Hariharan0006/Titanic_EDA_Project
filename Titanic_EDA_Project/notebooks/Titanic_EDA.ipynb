# Step 1: Import Libraries

import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

# Step 2: Load Dataset

df = pd.read_csv("dataset/titanic.csv")
df.head()

# Step 3: Basic Info and Summary

df.info()
df.describe()
df.shape
df.columns

# Step 4: Check Missing Values

df.isnull().sum()

# Step 5: Handle Missing Values

df['Age'].fillna(df['Age'].median(), inplace=True)
df.drop(['Cabin'], axis=1, inplace=True)
df['Embarked'].fillna(df['Embarked'].mode()[0], inplace=True)

#Age → fill median value
#Cabin → too many missing → remove column
#Embarked → fill most frequent value (mode)
#➡️ Clean data = accurate graphs & insights.

# Step 6: Remove Duplicates (if any)
df.drop_duplicates(inplace=True)

#step 7: Univariate Analysis (Single Column Study)
sns.countplot(x='Survived', data=df)
plt.title("Survival Count")   
plt.show()

sns.histplot(df['Age'], bins=20, kde=True)
plt.title("Age Distribution")
plt.show()

sns.countplot(x='Sex', data=df)
plt.title("Gender Distribution")
plt.show()

# Step 8: Bivariate Analysis (2 Columns Compare)

sns.barplot(x='Sex', y='Survived', data=df)
plt.show()
sns.barplot(x='Pclass', y='Survived', data=df)
plt.show()
sns.boxplot(x='Pclass', y='Age', data=df)
plt.show()

numeric_columns = df.select_dtypes(include = np.number)

#Step 9: Correlation Analysis

corr = numeric_columns.corr()
sns.heatmap(corr, annot=True, cmap='coolwarm')
plt.show()

# Step 10: Visualization Insights
sns.violinplot(x='Survived', y='Age', data=df)
plt.title("Age Distribution vs Survival")
plt.show()

sns.countplot(x='Embarked', hue='Survived', data=df)
plt.title("Survival Count by Port of Embarkation")
plt.show()

sns.boxplot(x='Pclass', y='Fare', data=df)
plt.title("Fare vs Passenger Class")
plt.show()


sns.countplot(x='Sex', hue='Survived', data=df)
plt.title("Survival Count by Gender")
plt.show()

sns.pairplot(df[['Survived', 'Pclass', 'Age', 'Fare']])
plt.show()

#Plot	Purpose	Main Insight
#Violin Plot	Age vs Survival	                Younger = Higher survival
#Count Plot     (Embarked)	Port vs Survival	Cherbourg passengers survived more
#Box Plot   	Class vs Fare                  	Rich passengers (1st class) paid more
#Count Plot     (Gender)Sex vs Survival	Women   survived more
#Pairplot     	Multivariable view	Fare, Pclass, Survived correlation visible



df.to_csv("outputs/cleaned_titanic.csv", index=False)

